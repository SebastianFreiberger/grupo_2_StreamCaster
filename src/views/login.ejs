<!DOCTYPE html>
<html lang="en">

<!-- Head -->
<%- include('partials/head') %> 

<body>
    <!-- Header -->
    <%- include('partials/header') %> 

      <!-- MAIN LOGGIN -->
        <main class="main-loggin">
            <section class="section-main-loggin">
                <div class="title-loggin">
                    <h1>Iniciar sesion</h1>
                </div>

                <!-- array de errores -->
                <section class="errores">
                    <ul >
        
                    </ul>
                </section>


                <section class="section-loggin">
                    <form action="/user/login" method="POST" class="form-loggin">
                        <div class="campo-loggin">
                            <label for="email">Email</label>
                            <input type="text" name="email" id="email">
                        </div>
                        <div class="campo-loggin">
                            <label for="contrasenia">Contrase√±a</label>
                            <input type="password" name="contrasenia" id="contrasenia">
                        </div>
                        <% if (locals.errors && errors.email) { %>
                            <div class="text-danger">
                                <%= errors.email.msg %>
                            </div>
                        <% } %>

                        <label class="checkbox-recordar">
                            <input name="remember_user" type="checkbox" id="checkbox-loggin" class="checkbox-loggin">Mantener mi sesion iniciada
                        </label>          
                        <div class="boton">
                            <button type="submit" class="button-ingresar">
                                Ingresar
                            </button>
                        </div>
                    </form>
                </section>
            </section>
        </main>
        <!-- FIN MAIN LOGGIN -->
        
    <!-- Footer -->
    <%- include('partials/footer') %>
    
    <script src="/js/validFrontLog.js" type="text/javascript"></script>

</body>
</html>